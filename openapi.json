    "/api/v1/classify": {
      "post": {
        "tags": [
          "classify"
        ],
        "summary": "Classify Text",
        "operationId": "classify_text_api_v1_classify_post",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/ClassifyRequest"
              }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "description": "Successful Response",
